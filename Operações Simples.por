programa
{
	funcao inicio()
	{
		real a, b, soma, sub, mult, div
		
		escreva("Digite o primeiro numero: ")
		leia(a)

		escreva("Digite o segundo numero: ")
		leia(b)

		soma = a + b // 
		sub  = a - b // 
		mult = a * b // 
		div  = a / b // 

		escreva("\nA soma dos numeros e igual a: ", soma) 		
		escreva("\nA subtracao dos numeros e igual a: ", sub) 		
		escreva("\nA multiplicacao dos numeros e igual a: ", mult) 	
		escreva("\nA divisao dos numeros e igual a: ", div, "\n") 	
	}
}

